{
    // Left side
    "clock": {
        "format": "<b>{:%H:%M}</b>",
        "tooltip-format": "{:%A,%n%d. %b %Y%n%Z %z}",
        "tooltip": true
    },
    "custom/battery": {
        "exec": "~/.config/waybar/scripts/battery_module.sh",
        "on-click": "~/.config/waybar/scripts/battery_profile.sh",
        "return-type": "json",
        "interval": 10,
        "signal": 8,
        "tooltip": true,
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""],
        "tooltip": false
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}",
        "format-bluetooth-muted": "{volume}%  {icon}",
        "format-muted": "{volume}% ",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "killall pavucontrol || pavucontrol"
    },

    // Center
    "hyprland/window": {
        "format": "{}",
        "rewrite": {
            //"(.*) - Brave": "$1", // 🌎
            "(.*)@(.*):(.*)": "$3"
        }
    },

    // Right side
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },
    "bluetooth": {
        // "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
        // "format": "󰂯 {status}",
        // format-* handles every state, so default format is not necessary.
        "format-on": "󰂯",
        "format-off": "󰂲",
        "format-disabled": "󰂲", // an empty format will hide the module
        "format-connected": "󰂱 {num_connections}",
        // "tooltip-format": "{controller_alias}\t{controller_address}",
        // "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
        "tooltip-format-connected": "{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "show-disabled": true,
        "interval": 10,
        "on-click": "killall blueman-manager || blueman-manager"
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{signalStrength}% 󰖩 ",
        "format-ethernet": "{ipaddr}/{cidr}  ",
        "format-linked": "{ifname} (No IP)  ",
        "format-disconnected": "N/A 󱚵 ",
        "tooltip-format": "{ifname} via {gwaddr} ({essid})  ",
        // "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "on-click": "killall nm-connection-editor || nm-connection-editor"
    },
    "cpu": {
        "format": "{usage}% ",
        "on-click": "~/.config/hypr/scripts/processes.sh",
        "tooltip": true
    },
    "memory": {
        "format": "{}% ",
        "on-click": "~/.config/hypr/scripts/processes.sh",
        "tooltip": true
    },
    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}°C {icon}",
        "format-icons": ["", "", "", "", ""],
        "on-click": "~/.config/hypr/scripts/processes.sh",
        "tooltip": false
    },
    "custom/power": {
        "format": "⏻ ",
        "tooltip": false,
        "on-click": "~/.config/hypr/scripts/logout.sh"
    },
